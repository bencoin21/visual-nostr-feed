{
  "name": "visual-nostr-feed",
  "description": "Interactive visual Nostr client with dual-layout and AI-powered image categorization",
  "version": "1.0.0",
  "module": "index.tsx",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "PORT=4420 bun --hot index.tsx",
    "start": "bun run index.tsx",
    "build": "bun build index.tsx --outdir ./dist",
    "config": "echo 'Edit src/config.ts to adjust timing and behavior settings'"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@kitajs/html": "^4.2.10",
    "@kitajs/ts-html-plugin": "^4.1.3",
    "nostr-tools": "^2.9.5"
  }
}
