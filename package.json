{
  "name": "nostr-image-time-machine",
  "description": "Professional image time machine for Nostr feeds with video editor-style timeline controls",
  "version": "2.0.0",
  "module": "index.tsx",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "PORT=4420 bun --hot index.tsx",
    "start": "bun run index.tsx",
    "build": "bun build index.tsx --outdir ./dist",
    "config": "echo 'Edit src/config.ts to adjust timeline and behavior settings'",
    "clean": "rm -f *.json && echo 'Cleared time machine storage'"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@kitajs/html": "^4.2.10",
    "@kitajs/ts-html-plugin": "^4.1.3",
    "nostr-tools": "^2.9.5"
  }
}
